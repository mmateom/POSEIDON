<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_preferences"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    tools:context=".Activities.preferences.DeleteData">
    <include layout="@layout/toolbar"
        android:id="@+id/include" />


    <Button
        android:text="Delete steps data"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:id="@+id/delete_steps"
        android:background="@drawable/enter_weight_header"
        android:textColor="@color/HeaderColor"
        android:layout_marginTop="96dp"
        android:layout_below="@+id/delete_2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Steps data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/stepsdelete"
        android:textSize="18sp"
        android:gravity="center"
        android:textColor="@color/ToolbarTextColor"
        android:textStyle="bold"

        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/delete_2"
        android:layout_alignRight="@+id/weightdelete"
        android:layout_alignLeft="@+id/weightdelete"
        android:layout_alignStart="@+id/weightdelete">


    </TextView>

    <Button
        android:text="Delete weight data"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="39dp"
        android:id="@+id/delete_2"
        android:background="@drawable/enter_weight_header"
        android:textColor="@color/HeaderColor"
        android:layout_below="@+id/weightdelete"
        android:layout_toRightOf="@+id/weightdelete"
        android:layout_toEndOf="@+id/weightdelete" />

    <TextView
        android:text="   Delete data"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/textView3"
        android:textSize="20sp"
        android:gravity="center_vertical"
        android:textColor="@color/HeaderColor"
        android:textStyle="bold"
        android:background="@color/ToolbarTextColor"
        android:layout_below="@+id/include"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    </TextView>

    <TextView
        android:text="Weight data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/weightdelete"
        android:textSize="18sp"
        android:gravity="center"
        android:textColor="@color/ToolbarTextColor"
        android:textStyle="bold"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/textView3"
        android:layout_toLeftOf="@+id/delete_steps"
        android:layout_toStartOf="@+id/delete_steps">

    </TextView>


</RelativeLayout>

