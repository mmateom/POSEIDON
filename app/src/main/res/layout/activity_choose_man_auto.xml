<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_choose_man_auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.recordweight.ChooseManAuto">

    <include layout="@layout/toolbar"
        android:id="@+id/include3" />

    <TextView
        android:text="      Log Your Weight"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/textView4"
        android:textSize="18sp"
        android:gravity="center_vertical"
        android:background="@color/ToolbarTextColor"
        android:textColor="@color/HeaderColor"
        android:textStyle="bold"
        android:layout_below="@+id/include3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="How do you want to log your weight?"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:textColor="@color/ToolbarTextColor"
        android:id="@+id/textView10"
        android:layout_gravity="center_vertical"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp" />

    <Button
        android:text=" Enter Manually"
        android:background="@drawable/round_corner_button"
        android:paddingTop="10sp"
        android:id="@+id/manually"
        android:layout_gravity="fill"
        android:layout_marginTop="59dp"
        android:layout_width="150dp"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:layout_height="70dp"
        android:layout_below="@+id/textView10"
        android:layout_alignStart="@+id/automatically"
        android:layout_alignEnd="@+id/automatically" />

    <Button
        android:text="Get Automatically"
        android:background="@drawable/round_corner_button"
        android:paddingTop="10sp"
        android:id="@+id/automatically"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="51dp"
        android:layout_width="170dp"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:layout_height="70dp"
        android:layout_below="@+id/manually"
        android:layout_centerHorizontal="true" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        app:srcCompat="@android:drawable/ic_dialog_info"
        android:layout_marginLeft="@dimen/fab_margin"
        android:layout_marginRight="@dimen/fab_margin"
        android:onClick="showGetAutomaticallyInfo"
        android:layout_marginBottom="32dp"
        android:layout_marginStart="17dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/automatically" />
</RelativeLayout>
