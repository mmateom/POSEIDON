<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/popup">

    <TextView
        android:text="Weight increased on more than 2 kgs!"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/morethan2kilos"
        android:textAllCaps="false"
        android:textSize="23dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/StatusBarColor"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        tools:textStyle="bold" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/up1"
        android:layout_marginTop="10dp"
        android:id="@+id/imageView3"
        android:layout_below="@+id/morethan2kilos"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Tap to exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textAllCaps="true"
        android:textSize="20dp"
        android:layout_marginTop="200dp"
        android:textColor="#58857e"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        tools:textStyle="bold">

    </TextView>
</RelativeLayout>