<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_get_weight"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.mikel.poseidon.recordweight.GetWeight">

    <include layout="@layout/toolbar"
        android:id="@+id/include1"/>


    <TextView
        android:text="      Enter your weight"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/textView4"
        android:textSize="18sp"
        android:gravity="center_vertical"
        android:background="@color/ToolbarTextColor"
        android:textColor="@color/HeaderColor"
        android:textStyle="bold"
        android:layout_below="@+id/include1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <LinearLayout
        android:layout_width="155dp"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:weightSum="1"
        android:id="@+id/linearLayout5"
        android:layout_marginTop="67dp"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true">

        <TextView
            android:text="Weight"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:id="@+id/textView10"
            android:textSize="22sp"
            android:gravity="center"
            android:layout_weight="0.10"
            android:textStyle="normal|bold"
            android:textColor="@color/ToolbarTextColor"
            android:layout_marginRight="36dp"
            android:layout_marginEnd="36dp"
             />

        <EditText
            android:id="@+id/editTextWeight"
            android:layout_width="155dp"
            android:layout_marginTop="50dp"
            android:layout_height="50dp"
            android:background="@drawable/enter_weight"
            android:gravity="center"
            android:textSize="25sp"
            android:textStyle="bold"
            android:hint="Enter weight"
            android:inputType="numberDecimal"
            android:textColor="@color/Good" />


    </LinearLayout>

    <Button
        android:text="SAVE"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/ok_button"
        android:background="@drawable/enter_weight_header"
        android:textColor="@color/HeaderColor"
        android:layout_below="@+id/linearLayout5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp" />

    <TextView
        android:text="Kg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/unit_get_weight"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="19dp"
        android:textSize="18sp"
        android:layout_marginBottom="25dp"
        android:layout_alignBottom="@+id/linearLayout5"
        android:layout_toEndOf="@+id/linearLayout5" />

    <!--<TextView
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="ENTER WIGHT AUTOMATICALLY"
        android:textColor="@color/ToolbarTextColor"
        android:textStyle="bold"
        android:id="@+id/enter_automatically"
        android:gravity="center"
        android:layout_marginTop="53dp"
        android:layout_below="@+id/ok_button"
        android:layout_alignLeft="@+id/enter_manually"
        android:layout_alignStart="@+id/enter_manually" /> -->


</RelativeLayout>
