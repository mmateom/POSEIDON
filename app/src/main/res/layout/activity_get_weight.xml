<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_get_weight"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".Activities.recordweight.GetWeight">

    <include layout="@layout/toolbar"
        android:id="@+id/include1"/>


    <TextView
        android:text="      Enter your weight"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/textView4"
        android:textSize="18sp"
        android:gravity="center_vertical"
        android:background="@color/ToolbarTextColor"
        android:textColor="@color/HeaderColor"
        android:textStyle="bold"
        android:layout_below="@+id/include1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <Button
        android:text="SAVE"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/ok_button"
        android:background="@drawable/enter_weight_header"
        android:textColor="@color/HeaderColor"
        android:layout_below="@+id/unit_get_weight"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp" />

    <TextView
        android:text="Kg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/unit_get_weight"
        android:layout_marginLeft="12dp"
        android:textSize="18sp"
        android:layout_alignBottom="@+id/editTextWeight"
        android:layout_toEndOf="@+id/editTextWeight" />

    <EditText
        android:id="@+id/editTextWeight"
        android:layout_width="155dp"
        android:layout_height="50dp"
        android:background="@drawable/enter_weight"
        android:gravity="center"
        android:hint="Enter weight"
        android:inputType="numberDecimal"
        android:textColor="@color/Good"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_below="@+id/imageView5"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        app:srcCompat="@drawable/downicon"
        android:layout_alignTop="@+id/textView10"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="57dp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="left"
        android:layout_marginRight="36dp"
        android:layout_weight="0.33"
        android:gravity="center"
        android:text="Put your weight in the box"
        android:textColor="@color/ToolbarTextColor"
        android:textSize="22sp"
        android:textStyle="normal|bold"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="59dp" />

    <!--<TextView
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="ENTER WIGHT AUTOMATICALLY"
        android:textColor="@color/ToolbarTextColor"
        android:textStyle="bold"
        android:id="@+id/enter_automatically"
        android:gravity="center"
        android:layout_marginTop="53dp"
        android:layout_below="@+id/ok_button"
        android:layout_alignLeft="@+id/enter_manually"
        android:layout_alignStart="@+id/enter_manually" /> -->


</RelativeLayout>
