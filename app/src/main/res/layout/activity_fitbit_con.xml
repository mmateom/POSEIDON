<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_fitbit_btn"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".Activities.preferences.FitbitConnection">

    <include
        layout="@layout/toolbar"
        android:id="@+id/include"/>

    <TextView
        android:text="      Fitbit connection"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/textView4"
        android:textSize="18sp"
        android:gravity="center_vertical"
        android:background="@color/ToolbarTextColor"
        android:textColor="@color/HeaderColor"
        android:textStyle="bold"
        android:layout_below="@+id/include"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:text="CONNECT TO FITBIT"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="108dp"
        android:background="@drawable/enter_weight_header"
        android:textColor="@color/HeaderColor"
        android:id="@+id/fitbitbtn"
        android:layout_below="@+id/include"
        android:layout_alignStart="@+id/disconnect" />

    <Button
        android:text="disconnect"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="102dp"
        android:background="@drawable/enter_weight_header"
        android:textColor="@color/HeaderColor"
        android:id="@+id/disconnect"
        android:layout_below="@+id/fitbitbtn"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
