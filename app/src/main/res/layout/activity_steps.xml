<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_steps"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.mikel.poseidon.Steps">

    <include
        layout="@layout/toolbar"
        android:id="@+id/include" />

    <TextView
        android:text="EXERCISE TIME"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/a"
        android:textSize="18sp"
        android:gravity="center"
        android:background="@color/ToolbarTextColor"
        android:textColor="@color/HeaderColor"
        android:textStyle="bold"
        android:layout_below="@+id/include"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Calories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"

        android:layout_marginRight="30dp"
        android:layout_marginEnd="30dp"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignRight="@+id/tv_chr"
        android:layout_alignEnd="@+id/tv_chr" />

    <LinearLayout
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:layout_below="@+id/tv_chr"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout11">

        <TextView
            android:text="HOURS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"
            android:id="@+id/t"
            android:layout_weight="1"
            />
        <TextView
            android:text="MINS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:layout_marginStart="19dp"
            android:id="@+id/u"
            android:layout_weight="1"
            />

        <TextView
            android:text="SECONDS"
            android:layout_marginLeft="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/k"
            />

    </LinearLayout>

    <TextView
        android:text="Your Progress"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/p"
        android:textSize="18sp"
        android:gravity="center"
        android:background="@color/ToolbarTextColor"
        android:textColor="@color/HeaderColor"
        android:textStyle="bold"
        android:layout_below="@+id/linearLayout11"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:id="@+id/linearLayout9"
        android:layout_below="@+id/p"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true">
        <TextView
            android:text="0"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/steps_counting"
            android:textSize="30sp"
            android:gravity="center"
            android:textColor="@color/ToolbarTextColor"/>
        <TextView
            android:text="0"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/calories"
            android:textSize="30sp"
            android:gravity="center"
            android:textColor="@color/ToolbarTextColor"
   />

    </LinearLayout>

    <TextView
        android:text=""
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:id="@+id/q"
        android:textSize="18sp"
        android:gravity="center"
        android:background="@color/ToolbarTextColor"
        android:textColor="@color/HeaderColor"
        android:textStyle="bold"
        android:layout_below="@+id/linearLayout9"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="36dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="105dp"
        android:weightSum="2"
        android:id="@+id/linearLayout8"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="11dp">

        <Button
            android:text=""
            android:drawableTop="@drawable/start"
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/start"
            android:layout_marginLeft="1dp"
            android:layout_marginStart="1dp"
            android:onClick="onStartService"
            android:gravity="center"
          />

        <Button
            android:text=""
            android:drawableTop="@drawable/stop"
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/stop"
            android:onClick="onStopService"
            android:layout_marginLeft="50dp"
            android:layout_marginStart="50dp"
            />

    </LinearLayout>

    <TextView
        android:text="00:00:00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_chr"
        android:textSize="50sp"
        android:textColor="@color/ToolbarTextColor"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/a"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Steps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_below="@+id/p"
        android:layout_alignLeft="@+id/tv_chr"
        android:layout_alignStart="@+id/tv_chr"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/heart_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout9"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="TextView" />


    <!-- <Button
         android:id="@+id/pause"
         android:layout_width="wrap_content"
         android:layout_height="60dp"
         android:layout_above="@+id/linearLayout8"
         android:layout_alignLeft="@+id/linearLayout9"
         android:layout_alignStart="@+id/linearLayout9"
         android:layout_marginLeft="16dp"
         android:layout_marginStart="16dp"
         android:text="pause"
         android:onClick="pauseCounting"/>-->


</RelativeLayout>
