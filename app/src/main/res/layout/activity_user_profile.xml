<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mikel.poseidon.UserProfile">

    <include
        layout="@layout/toolbar"
        android:id="@+id/include" />

    <TextView
        android:text="      Your Profile"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/textView4"
        android:textSize="18sp"
        android:gravity="center_vertical"
        android:background="@color/ToolbarTextColor"
        android:textColor="@color/HeaderColor"
        android:textStyle="bold"
        android:layout_below="@+id/include"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="400dp"
        android:orientation="vertical"
        android:id="@+id/linearLayout4"
        android:layout_below="@+id/textView4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="7dp"
        android:layout_alignBottom="@+id/linearLayout3">

        <TextView
            android:text="years"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:id="@+id/years"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:layout_marginTop="62dp"/>

        <TextView
            android:text="cm"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:id="@+id/cm"
            android:gravity="center_vertical"
            android:textSize="18sp"
            android:layout_marginTop="32dp"
            />

        <TextView
            android:text=""
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:id="@+id/gender"
            android:textStyle="normal|bold"
            android:gravity="center"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="18sp"
            android:layout_marginTop="32dp"
            />

        <TextView
            android:text="Kg"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:id="@+id/weight1"
            android:gravity="center_vertical"
            android:textSize="18sp"
            android:layout_marginTop="32dp"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayout3"

        android:layout_below="@+id/textView4"
        android:layout_alignLeft="@+id/save"
        android:layout_alignStart="@+id/save">

        <Spinner
            android:layout_marginTop="20dp"
            android:id="@+id/spinner2"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="0.22"
            android:background="@drawable/spinner"
            android:gravity="center" />

        <TextView
            android:text=""
            android:hint="25"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:id="@+id/profile_age"
            android:textStyle="normal|bold"
            android:background="@drawable/enter_weight"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:textColor="@android:color/holo_green_dark" />

        <TextView
            android:text=""
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:hint="175"
            android:background="@drawable/enter_weight"
            android:id="@+id/profile_height"
            android:textStyle="normal|bold"
            android:textColor="@android:color/holo_green_dark"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_marginTop="32dp"
            />

        <TextView
            android:text=""
            android:hint="Male"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:background="@drawable/enter_weight"
            android:id="@+id/profile_gender"
            android:textStyle="normal|bold"
            android:gravity="center"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="18sp"
            android:layout_marginTop="34dp"
            />
        <EditText
            android:text=""
            android:hint="70"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:id="@+id/profile_weight"
            android:inputType="numberDecimal"
            android:background="@drawable/enter_weight"
            android:gravity="center"
            android:textStyle="normal|bold"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="18sp"
            android:layout_marginTop="32dp"
            />


    </LinearLayout>

    <Spinner
        android:layout_width="170dp"
        android:layout_height="30dp"
        android:id="@+id/spinner"
        android:background="@drawable/spinner"
        android:layout_alignBottom="@+id/linearLayout2"
        android:layout_toRightOf="@+id/linearLayout2"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayout2"
        android:weightSum="1"
        android:layout_marginRight="9dp"
        android:layout_marginEnd="9dp"
        android:layout_below="@+id/textView25"
        android:layout_toLeftOf="@+id/linearLayout3"
        android:layout_toStartOf="@+id/linearLayout3"
        android:layout_marginTop="16dp">


        <TextView
            android:text="Age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:layout_marginTop="12dp"
            android:id="@+id/textView10"
            android:textSize="18sp"
            android:gravity="center"
            android:textStyle="normal|bold"
            android:textColor="@color/ToolbarTextColor"

            />

        <TextView
        android:text="Height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center"
        android:id="@+id/textView12"
        android:textSize="18sp"
            android:gravity="center"
        android:textStyle="normal|bold"
        android:textColor="@color/ToolbarTextColor"
            android:layout_marginTop="40dp"
       />

        <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:gravity="center"
                android:text="Gender"
                android:textColor="@color/ToolbarTextColor"
                android:textSize="18sp"
                android:textStyle="normal|bold"
            android:layout_marginTop="42dp" />

        <TextView
            android:text="Weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView13"
            android:layout_gravity="left|center"
            android:textStyle="normal|bold"
            android:gravity="center"
            android:textColor="@color/ToolbarTextColor"
            android:textSize="18sp"
            android:layout_marginTop="42dp"
   />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:layout_marginTop="42dp"
            android:layout_weight="0.11"
            android:gravity="left"
            android:text="Activity          Level"
            android:textColor="@color/ToolbarTextColor"
            android:textSize="18sp"
            android:textStyle="normal|bold" />

    </LinearLayout>

    <Button
        android:text="Save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/save"
        android:background="@drawable/enter_weight_header"
        android:textColor="@color/HeaderColor"
        android:layout_marginBottom="31dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Units"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:textColor="@color/ToolbarTextColor"
        android:layout_below="@+id/textView4"
        android:layout_alignLeft="@+id/linearLayout2"
        android:layout_alignStart="@+id/linearLayout2"
        android:layout_marginTop="19dp" />

    <!--<TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/save"
        android:layout_alignLeft="@+id/linearLayout2"
        android:layout_alignStart="@+id/linearLayout2"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:id="@+id/textView15" />
        -->


</RelativeLayout>
