<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.mikel.poseidon">

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:name=".RootFitbitApplication"
        android:icon="@drawable/android"
        android:label="POSEIDON"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        tools:replace="android:label">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="com.mikel.poseidon.MainActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GetWeight"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ViewSummary"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Graph"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Steps"
            android:screenOrientation="portrait" />
        <activity
            android:name=".StepsRecord"
            android:screenOrientation="portrait" />
        <activity
            android:name=".PreferencesList"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SetGraphLimits"
            android:label="@string/title_activity_set_graph_limits"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="com.mikel.poseidon.SetGraphLimits" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DeleteData"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="com.mikel.poseidon.DeleteData" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".FitbitBtnActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="com.mikel.poseidon.FitbitBtnActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".UserProfile"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="com.mikel.poseidon.UserProfile" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Reminders"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="com.mikel.poseidon.Reminders" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Goals"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="com.mikel.poseidon.Goals" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".SendDatabase">
            <intent-filter>
                <action android:name="com.mikel.poseidon.SendDatabase" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <service
            android:name=".StepService"
            android:screenOrientation="portrait" />
        <service android:name=".utility.ExerciseNotifService" />

        <receiver
            android:name=".WeightNotifBootReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
        <receiver
            android:name=".WeightNotifReceiver"
            android:process=":remote" />

        <activity
            android:name=".GetWeightFitbit"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ChooseManAuto"
            android:screenOrientation="portrait" />
        <activity
            android:name=".CurrentState"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ActivityTracker"
            android:screenOrientation="portrait" />

    </application>

</manifest>